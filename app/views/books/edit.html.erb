<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title %>
  <label for="inputIntroduction">Opinion</label>
  <%= f.text_field :body %>
  <%= f.submit "Update Book" %>
<% end %>

<div class="d-flex">
  <%= link_to book_path(params[:id]) do %>
    <p>Show</p>
  <% end %>
  <p>|</p>
  <%= link_to books_path do %>
    <p>Back</p>
  <% end %>
</div>
