<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <% if Book.new.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="flex-row">
        <h2>User info</h2>
        <div>
          <%= image_tag @user.get_profile_image(100,100) %>
        </div>
        <table class="table">
          <tr class="border-bottom">
            <th><strong>name</strong></th>
            <th><strong><%= @user.name %></strong></th>
          </tr>
          <tr>
            <th><strong>Introduction</strong></th>
            <th><strong><%= @user.introduction %></strong></th>
          </tr>
        </table>
      </div>
      <div class="flex-row mx-n3 mt-5 mb-3">
        <%= link_to(edit_user_path(@user.id)) do %>
          <button class="btn btn-outline-secondary btn-block" type="button"><i class="fas fa-user-cog"></i><span></span></button>
        <% end %>
      </div>
      <div class="flex-row">
          <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>
          <h6>Title</h6>
            <%= f.text_field :title,class:"form-control input-lg w-100 mb-3"  %>
          <h6>Opinion</h6>
            <%= f.text_area :body,class:"form-control input-lg w-100 mb-n1"  %><br>
          <%= f.submit 'Create Book',class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th style="width:28%"></th>
            <th style="width:16%">Title</th>
            <th style="width:23%">Opinion</th>

          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <th scope="row">
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(90,90) %>
              <% end %>
            </th>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
